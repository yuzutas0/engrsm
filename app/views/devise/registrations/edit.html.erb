<div class="layout__devise">
  <p><%= render 'layouts/breadcrumb_2', third_page: ('Edit ' + resource_name.to_s.humanize) %></p>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'module__form' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="module__form__field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'module__form__field__text' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="module__form__field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: 'module__form__field__text' %>
    </div>

    <div class="module__form__field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: 'off', class: 'module__form__field__text' %>
    </div>

    <div class="module__form__field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'module__form__field__text' %>
    </div>

    <div class="module__form__field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: 'off', class: 'module__form__field__text' %>
    </div>

    <div><%= f.submit 'Update', class: 'module__button' %></div>
  <% end %>

  <hr>
  <p>
    or <%= link_to 'delete ' + resource_name.to_s.humanize, registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete %>
    : Pay attention that you can never be restored!!
  </p>
</div>

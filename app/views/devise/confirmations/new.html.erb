<div class="layout__devise">
  <h2>Resend confirmation instructions</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form__field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form__field__text' %>
    </div>

    <div><%= f.submit 'Resend confirmation instructions', class: 'button' %></div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
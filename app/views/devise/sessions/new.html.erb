<% @page_title = t('views.path.name.login') %>
<div class="layout__devise">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'module__form' }) do |f| %>

    <div class="module__form__field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'module__form__field__text' %>
    </div>

    <div class="module__form__field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: 'off', class: 'module__form__field__text' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="module__form__field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div><%= f.submit 'Log in', class: 'module__button' %></div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>

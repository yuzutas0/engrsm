<% @page_title = t('.title') %>
<div class="layout__devise">
  <h2><%= @page_title %></h2>
  <hr>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
               html: { method: :post, class: 'module__form' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="module__form__field">
      <%= f.label :email, t('.email') %><br />
      <%= f.email_field :email, autofocus: true, class: 'module__form__field__text' %>
    </div>

    <hr>
    <div><%= f.submit t('.submit'), class: 'module__button' %></div>
  <% end %>

  <hr>
  <%= render 'devise/shared/links' %>
</div>

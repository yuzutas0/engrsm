<div class="layout__devise">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form__field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'form__field__text' %>
    </div>

    <div><%= f.submit 'Send me reset password instructions', class: 'button' %></div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>

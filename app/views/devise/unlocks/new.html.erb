<% @page_title = t('.title') %>
<h2><%= @page_title %></h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name),
             html: { method: :post, class: 'module__form' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="module__form__field">
    <%= f.label :email, t('.email') %><br />
    <%= f.email_field :email, autofocus: true, class: 'module__form__field__text' %>
  </div>

  <div><%= f.submit @page_title, class: 'module__button' %></div>
<% end %>

<%= render 'devise/shared/links' %>

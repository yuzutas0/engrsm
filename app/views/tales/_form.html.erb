<div class="layout__tale__form module__form">

  <% if @tale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tale.errors.count, "error") %> prohibited this tale from being saved:</h2>
      <ul>
      <% @tale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="module__form__field">
    <%= f.text_field :title, class: 'module__form__field__text', placeholder: 'Title' %>
  </div>

  <div id="vue-markdown" class="tale-form-content-group">
    <div class="tale-form-content-sp-tab module__tab">
      <li class="active"><a id="switch-vue-markdown-editor">Editor</a></li>
      <li><a id="switch-vue-markdown-preview">Preview</a></li>
    </div>
    <div class="tale-form-markdown-adjust">
      <div id="vue-markdown-editor-outer" class="tale-form-markdown-editor-outer">
        <%= f.text_area :content, id: 'vue-markdown-editor', class: 'tale-form-markdown-editor-inner', 'v-model' => 'content', placeholder: 'Write down by markdown' %>
      </div>
      <div id="vue-markdown-preview-outer" class="tale-form-markdown-preview-outer hidden-xs">
        <div v-html="content | preview" id="vue-markdown-preview" class="tale-form-markdown-preview-inner" />
      </div>
    </div>
  </div>

  <div><%= f.submit class: 'module__button' %></div>
</div>

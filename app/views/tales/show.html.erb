<div class="tale-show">
  <p><%= render 'layouts/breadcrumb_2', third_page: @tale.title %></p>
  <div class="tale-show-information">
      <h2><%= @tale.title %></h2>

      <div>
        <a href="#" class="bg-info tales-show-label">Label1</a>
        <a href="#" class="bg-info tales-show-label">Label2</a>
        <a href="#" class="bg-info tales-show-label">Label3</a>
      </div>

      <div>
        <a href="#" class="bg-warning tales-show-star">Star1:<%= fa_icon 'star' %><%= fa_icon 'star' %><%= fa_icon 'star' %></a>
        <a href="#" class="bg-warning tales-show-star">Star2:<%= fa_icon 'star' %></a>
        <a href="#" class="bg-warning tales-show-star">Star3:<%= fa_icon 'star' %><%= fa_icon 'star' %><%= fa_icon 'star' %><%= fa_icon 'star' %><%= fa_icon 'star' %></a>
      </div>

      <p><%= @tale.created_at.strftime('%Y-%b-%d %H:%M') %>に投稿</p>
      <% unless @tale.created_at == @tale.updated_at %>
          <p><%= @tale.updated_at.strftime('%Y-%b-%d %H:%M') %>に編集</p>
      <% end %>

      <%= link_to Constants::EDIT_TALE_PATH_NAME, edit_tale_path(@tale), class: 'btn btn-primary' %>
      <hr>
  </div>

  <div class="tale-show-content">
    <p id="notice"><%= notice %></p>
    <div class="panel panel-default">
      <div class="panel-body"><%= markdown_to_html(@tale.content) %></div>
    </div>
  </div>
</div>

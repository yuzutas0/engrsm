<div class="layout__tale__search">
  <p>It's modal!</p>

  <%= form_for searchable, url: tales_path, html: { method: :get } do |f| %>
    <div class="module__form">
      <div class="module__form__field">
        <%= f.text_field :keyword, class: 'module__form__field__text', placeholder: 'Keyword' %>
      </div>
      <div>
        <%= f.submit 'Search', name: nil, class: 'module__button module__button--small module__button--wide' %>
      </div>
    </div>
  <% end %>
</div>
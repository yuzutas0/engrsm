<p id="notice"><%= notice %></p>

<h3>Listing Tales</h3>

<% @tales.each do |tale| %>
  <div class="list-group">
    <%= link_to tale, class: 'list-group-item' do %>
      <h4 class="list-group-item-heading">
        <%= tale.title %>
      </h4>
      <p class="list-group-item-text">
        <% if tale.content.size >= 30 %>
          <%= tale.content[0..29] %>...
      <% else %>
          <%= tale.content %>
      <% end %>
      </p>
    <% end %>
  </div>
<% end %>

<br>

<%= link_to 'New Tale', new_tale_path %>

<div class="module__form">
  <%= form_for(@contact, url: create_contact_path) do |f| %>

    <p><%= t('.title_html') %></p>

    <div class="module__form__field">
      <%= f.text_area :content, class: 'module__form__field__text', rows: 4, placeholder: t('.placeholder') %>
    </div>

    <div>
      <%= f.submit t('.submit'), class: 'module__button module__button--wide' %>
    </div>
  <% end %>
</div>

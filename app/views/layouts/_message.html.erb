<% unless flash.empty? %>
    <script type="text/javascript">
      <% flash.each do |type, message| %>
      <% type = type.gsub('alert', 'error').gsub('notice', 'info') %>
        toastr.options = {
          "closeButton": true,
          "positionClass": "toast-top-right"
        };
        toastr.<%= type %>(<%= message.inspect.html_safe %>);
      <% end %>
    </script>
<% end %>
